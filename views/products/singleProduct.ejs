<% layout('layouts/boilerplate') %>

<% let {name,price,size,unit,qty,category,id,imageLink} = grocerySingleProductData %>
<div id="productDiv" class="vw-100 vh-100 content-wrapper d-flex flex-column align-items-center justify-content-center">

  <div class="card mt-5" style="max-width:90%;">
    <div class="row d-flex flex-md-row flex-column">
      <div class="col d-flex justify-content-center align-items-center rounded-start">
        <img src=<%= imageLink %> class="h-100 w-100" alt="Image of <%= name %>">
      </div>
      <div class="col">
        <div class="card-body">
          <h5 class="card-title"><%= name %></h5>
          <p class="">Category: <a href="/categories/<%= category %> %>"><%= category %></a> </p>

          <p class="card-text">$<%= price %> per <%=size%> <%= unit %></p>
          <% if (qty === 0) { %>
          <p class="card-text">Sorry we're all out. Please check again tomorrow</p>
            <% } else if (qty <= 5) {  %>
          <p class="card-text">Running Low! <%= qty %> left for sale</p>

          <% } else { %>
          <p class="card-text"><%= qty %> <%= qty %> left for sale</p>

          <% } %>
          <p>Gpt description here- Prompt: Pretend you are an online saleman. Create a short, kid friendly description
            of [prodNameHere]</p>

          <a href="/product/<%= id %>" class="btn btn-primary">Add to cart</a>
          <a href="/editProduct/<%= id %>" class="btn btn-primary">Edit</a>

        </div>
      </div>
    </div>
  </div>



</div>