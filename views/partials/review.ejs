<form class="mt-5 d-flex flex-column justify-content-evenly align-items-center"
      action="/<%=where%>/<%=id%>/review" method="post">
    <div class="mt-2 d-flex flex-column justify-content-evenly align-items-center">
      <label class="form-label" for="reviewRating">
        <h3>⭐ Leave a review ⭐</h3>
      </label>
        <input class="form-range" type="range" name="reviewRating" id="reviewRating" min="1" max="5" list="markers"
          step="1">
      <datalist id="markers">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
      </datalist>
    </div>
    <div class="d-flex flex-column justify-content-evenly align-items-center">

      <label class="form-label" class="" for="reviewBody">
        <h4>Review
        </h4>
      </label>

      <textarea class="form-control border border-success" name="reviewBody" id="reviewBody" cols="50" rows="10"
        style="max-width: 80%;" required>

      </textarea>
    </div>

    <input class="btn btn-success mt-2" type="submit" value="Submit review">
</form>

<h2 class="mt-5">Reviews:</h2>
  <% for (let review of reviews ) { %>

<div class="card mb-4 border border-success" style="min-width: 300px;">
  <div class="card-header">
    <a href="/users/id">Username here</a>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= review.ratingInStars %></h5>
    <p class="card-text"><%= review.body %></p>
  </div>
</div>
  <% } %>
